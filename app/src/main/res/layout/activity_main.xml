    <TextView
        android:id="@+id/text20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/txtViewMarginLeft"
        android:layout_marginTop="@dimen/txtTopMargin"
        android:text="@string/_20tk"
        android:textColor="@color/dark_300"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/text10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text50" />

    <TextView
        android:id="@+id/text10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/txtViewMarginLeft"
        android:layout_marginTop="@dimen/txtTopMargin"
        android:text="@string/_10tk"
        android:textColor="@color/dark_300"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/text5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text20" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/txtViewMarginLeft"
        android:layout_marginTop="@dimen/txtTopMargin"
        android:text="@string/_5tk"
        android:textColor="@color/dark_300"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text10" />


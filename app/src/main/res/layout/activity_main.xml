    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/btnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/_9"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/btn0"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/btnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/_4"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@+id/btn5" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/btnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/_1"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@+id/btn2" />

    <TextView
        android:id="@+id/text500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/txtViewMarginLeft"
        android:layout_marginTop="@dimen/firstTxtMarginTop"
        android:text="@string/_500tk"
        android:textColor="@color/dark_300"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/text100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/txtViewMarginLeft"
        android:layout_marginTop="@dimen/txtTopMargin"
        android:text="@string/_100tk"
        android:textColor="@color/dark_300"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/text50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text500" />

    <TextView
        android:id="@+id/text50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/txtViewMarginLeft"
        android:layout_marginTop="@dimen/txtTopMargin"
        android:text="@string/_50tk"
        android:textColor="@color/dark_300"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/text20"

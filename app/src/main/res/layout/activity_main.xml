<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn5"
        android:layout_width="@dimen/parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/btnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/_5"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/btn6" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="@dimen/parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/btnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/_6"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="@dimen/parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/btnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/_2"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/btn3" />

    <Button
        android:id="@+id/btnClr"
        android:layout_width="@dimen/parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/lastBtnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/clear"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn0" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="@dimen/parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/btnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/_3"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="@dimen/parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/lastBtnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/_0"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="@dimen/parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
        android:layout_marginBottom="@dimen/btnMarginBottom"
        android:backgroundTint="@color/yellow_200"
        android:textColor="@color/dark_200"
        android:text="@string/_8"
        android:textSize="@dimen/txtSize"
        app:layout_constraintBottom_toTopOf="@+id/btnClr"
        app:layout_constraintEnd_toStartOf="@+id/btn9" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="@dimen/parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginEnd="@dimen/btnMarginEnd"
